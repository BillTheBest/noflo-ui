# Prepare IndexedDB
'noflo-ui' -> NAME Storage(ui/PrepareStorage)
Storage DB -> IN DatabaseReady(ui/DatabaseReady)
Storage DB -> DB ProjectStorage(ui/ProjectStorage)
Storage DB -> DB RuntimeStorage(ui/RuntimeStorage)

# Event dispatching
Main(polymer/noflo-ui) EVENT -> IN Dispatch(routers/GroupRouter)
'user,main,project,github,runtime,context' -> ROUTES Dispatch
Dispatch OUT[0] -> IN UserStorage(ui/UserStorage)
Dispatch OUT[1] -> START MainContext(ui/CreateContext)
Dispatch OUT[2] -> IN ProjectStorage
Dispatch OUT[3] -> IN GithubStorage(ui/GithubStorage)
Dispatch OUT[4] -> IN RuntimeStorage
Dispatch OUT[5] -> IN ShowErrors(core/Output)
Dispatch MISSED -> IN ShowErrors(core/Output)

# Base data to UI
UserStorage(ui/UserStorage) USER -> USER Main
ProjectStorage PROJECTS -> PROJECTS Main
RuntimeStorage RUNTIMES -> RUNTIMES Main
# Pass local and GH contexts to runtime storage for remote node handling
ProjectStorage CONTEXT -> CONTEXT RuntimeStorage
GithubStorage CONTEXT -> CONTEXT RuntimeStorage
# Pass ready contexts to the UI
MainContext OUT -> CONTEXT Main
RuntimeStorage CONTEXT -> CONTEXT Main

# Start routing
ListenHash(interaction/ListenHash) INITIAL -> URL Router(ui/Router)
ListenHash CHANGE -> URL Router
Router ROUTE -> IN Dispatch

# Start the app
'noflo-ui' -> SELECTOR Main
'' -> START ListenWindow(interaction/ListenResize)
'' -> START UserStorage
'' -> START ListenHash

# Handle resizes
ListenWindow WIDTH -> WIDTH Main
ListenWindow HEIGHT -> HEIGHT Main
